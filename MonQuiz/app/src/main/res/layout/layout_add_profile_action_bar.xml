<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp"
        android:layout_alignParentLeft="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/action_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="-90dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


            <com.monquiz.customviews.CustomTextView
                android:id="@+id/tvGalleryNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/size_of_value_four"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_of_value_eighteen"
                android:visibility="gone"
                fonts:custom_font="@string/rubik_regular" />


            <com.monquiz.customviews.CustomTextView
                android:id="@+id/tvPostNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/size_of_value_four"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_of_value_eighteen"
                android:visibility="gone"
                fonts:custom_font="@string/rubik_regular" />

            <com.monquiz.customviews.CustomTextView
                android:id="@+id/tvGalleryDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/size_of_value_four"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_of_value_eighteen"
                android:visibility="gone"
                fonts:custom_font="@string/rubik_regular" />

            <com.monquiz.customviews.CustomTextView
                android:id="@+id/tvPostDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/size_of_value_four"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_of_value_eighteen"
                android:visibility="gone"
                fonts:custom_font="@string/rubik_regular" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
</RelativeLayout>
