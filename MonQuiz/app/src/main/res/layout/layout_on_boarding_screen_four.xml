   <androidx.constraintlayout.widget.Guideline
        android:id="@+id/box247H1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

   <androidx.constraintlayout.widget.Guideline
        android:id="@+id/box247H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.388" />

   <androidx.constraintlayout.widget.Guideline
        android:id="@+id/box247V1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.415" />

   <androidx.constraintlayout.widget.Guideline
        android:id="@+id/box247V2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.758" />


</androidx.constraintlayout.widget.ConstraintLayout>