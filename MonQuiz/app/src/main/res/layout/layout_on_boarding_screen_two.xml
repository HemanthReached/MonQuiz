    <!--android:contentDescription="@string/imageview"-->
    <!--android:src="@drawable/on2" />-->
    <!--TODO Change text size based on screen size-->

    <com.monquiz.customviews.CustomTextView
        android:id="@+id/tvTittle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/slide_2_desc"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/font_size_of_value_twenty"
        app:layout_constraintBottom_toTopOf="@id/textH2"
        app:layout_constraintEnd_toStartOf="@id/textV2"
        app:layout_constraintStart_toStartOf="@id/textV1"
        app:layout_constraintTop_toBottomOf="@id/textH1"
        fonts:custom_font="@string/rubik_regular" />

    <!--<rmgquizustomviews.CustomTextView-->
