    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="@dimen/size_of_value_sixteen">

            <com.monquiz.customviews.CustomTextView
                android:id="@+id/tvFAQItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/rubik_bold"
                android:layout_centerVertical="true"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/ivSettingClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_black"
                android:contentDescription="@string/app_name"
                android:padding="1dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E1E2"/>

       <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_of_value_sixteen"
            android:orientation="horizontal"
            android:padding="@dimen/size_of_value_sixteen">

            <ImageView
                android:id="@+id/ivSettingClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/size_of_value_ten"
                android:src="@drawable/ic_arrow_back_white" />

            <com.monquiz.customviews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/size_of_value_sixteen"
                android:layout_marginRight="@dimen/size_of_value_sixteen"
                android:gravity="center"
                android:paddingEnd="@dimen/size_of_value_sixteen"
                android:paddingRight="@dimen/size_of_value_sixteen"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_title_font_size"
                fonts:custom_font="@string/rubik_regular"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="40dp"
                android:clickable="true"
                android:focusableInTouchMode="true">

                <RelativeLayout
                    android:id="@+id/llAudioSettings"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/size_of_value_five"
                    android:orientation="horizontal">


                    <com.monquiz.customviews.CustomTextView
                        android:id="@+id/tvAudioSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_of_value_six"
                        android:text="@string/audio_effects"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/switchAudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/switch_on1" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#20000000" />

                <RelativeLayout
                    android:id="@+id/llNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/size_of_value_five"
                    android:orientation="horizontal">


                    <com.monquiz.customviews.CustomTextView
                        android:id="@+id/tvNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/size_of_value_six"
                        android:text="@string/notifications"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/switchNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/switch_on1"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#20000000" />

                <RelativeLayout
                    android:id="@+id/llRuleBook"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/size_of_value_five"
                    android:orientation="horizontal">

                    <com.monquiz.customviews.CustomTextView
                        android:id="@+id/tvRuleBook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/size_of_value_six"
                        android:text="@string/rule_book"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/size_of_value_five"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/chevron_right"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#20000000" />

                <RelativeLayout
                    android:id="@+id/llPersonalDetails"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/size_of_value_five">

                    <com.monquiz.customviews.CustomTextView
                        android:id="@+id/tvLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/size_of_value_six"
                        android:text="Personal Details"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/size_of_value_five"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/chevron_right"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#20000000" />

                <RelativeLayout
                    android:id="@+id/llFeedBack"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/size_of_value_five">


                    <com.monquiz.customviews.CustomTextView
                        android:id="@+id/tvFeedBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/size_of_value_six"
                        android:text="@string/feed_back"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_of_value_five"
                        android:maxWidth="70dp"
                        android:gravity="center"
                        android:contentDescription="@string/app_name"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Get a chance to win goodies"
                        android:textColor="#50000000"
                        android:textSize="10sp"
                        android:fontFamily="@font/rubik_regular"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="80dp">

                        <com.monquiz.customviews.CustomTextView
                            android:id="@+id/tvSettingsPolicy"
                            style="?borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:gravity="start|center_vertical"
                            android:text="@string/privacy_policy"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlue"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_light"/>

                        <com.monquiz.customviews.CustomTextView
                            android:id="@+id/tvSettingsTerms"
                            style="?borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:gravity="end|center_vertical"
                            android:text="@string/terms_conditions"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlue"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_light" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSignOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">


                    <com.monquiz.customviews.CustomTextView
                        android:id="@+id/tvSignOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/logout"
                        android:textColor="#334856"
                        android:textSize="16sp"
                        android:fontFamily="@font/rubik_regular"
                        android:background="@drawable/graybg_curved"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="60dp"
                        android:paddingEnd="60dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/version_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:contentDescription="@string/app_name"
                    android:text="Version 4.8.15.16.23.42"
                    android:textColor="#40000000"
                    android:textSize="12sp"
                    android:fontFamily="@font/rubik_light"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fonts:behavior_hideable="true"
            fonts:behavior_peekHeight="@null"
            fonts:behavior_skipCollapsed="true"
            android:background="#40000000"
            fonts:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:clickable="true"
            android:focusableInTouchMode="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fonts:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/whitebg_topradius1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <ImageView
                        android:id="@+id/ivQueryClose"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="end|center"
                        android:padding="10dp"
                        fonts:srcCompat="@drawable/ic_close_black"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:layout_marginTop="16dp"
                        fonts:layout_constraintTop_toTopOf="parent"
                    fonts:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:id="@+id/input_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    fonts:layout_constraintTop_toBottomOf="@id/ivQueryClose">

                <com.monquiz.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Feedback"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_of_value_twenty"
                    android:fontFamily="@font/rubik_semibold" />

                    <com.monquiz.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="120dp"
                        android:text="We love to listen. Your feedback matters the most to us."
                        android:textColor="#60000000"
                        android:textSize="12sp"
                        android:fontFamily="@font/rubik_regular" />

                    <com.monquiz.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="120dp"
                        android:text="Message"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:fontFamily="@font/rubik_regular" />

                <com.monquiz.customviews.CustomEditText
                    android:id="@+id/etQuery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="120dp"
                    android:maxHeight="240dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_border_transparent1"
                    android:gravity="start"
                    android:hint="Enter your feedback here"
                    android:maxLength="5000"
                    android:padding="15dp"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionDone"
                    android:textColor="@color/black"
                    android:textColorHint="#40000000"
                    android:textSize="@dimen/font_size_of_value_sixteen"
                    android:fontFamily="@font/rubik_regular"
                    tools:ignore="RtlSymmetry" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_marginTop="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="60dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20" />

                        <RelativeLayout
                            android:id="@+id/rlFragPlayPlayBtn"
                            style="@style/Button1"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_weight="60">

                            <com.monquiz.customviews.CustomTextView
                                android:id="@+id/btnSubmitQuery"
                                style="?borderlessButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/rubik_regular"
                                android:gravity="center"
                                android:text="Submit Feedback"
                                android:textColor="@color/white" />

                        </RelativeLayout>


                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/submit_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    fonts:layout_constraintTop_toBottomOf="@id/ivQueryClose"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="180dp"
                    android:clickable="false">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="100dp"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        fonts:lottie_rawRes="@raw/check"
                        fonts:lottie_autoPlay="true"
                        fonts:lottie_loop="false"
                        android:layout_marginBottom="0dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:text="Thank You!"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/rubik_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginEnd="80dp"
                        android:gravity="center"
                        android:text="Your feedback was sent successfully!"
                        android:textColor="#70000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/rubik_regular" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>